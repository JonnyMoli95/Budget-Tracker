<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="christophershae.budgettracker.ManualInputActivity">

    <EditText
        android:id="@+id/itemNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/categoryListView"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/itemPriceView"
        android:layout_width="105dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/zero_dollars"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/itemNameView"
        app:layout_constraintTop_toTopOf="@+id/itemNameView" />

    <ExpandableListView
        android:layout_width="325dp"
        android:layout_height="48dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="80dp"
        android:id="@+id/categoryListView" />

    <Button
        android:id="@+id/addItemToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/add"
        app:layout_constraintTop_toBottomOf="@+id/itemsAlreadyAddedToBudget"
        tools:layout_editor_absoluteX="52dp" />

    <Button
        android:id="@+id/finishAddingItemsToBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/finish"
        app:layout_constraintTop_toTopOf="@+id/addItemToBudget"
        tools:layout_editor_absoluteX="231dp" />

    <ListView
        android:id="@+id/itemsAlreadyAddedToBudget"
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryListView"
        tools:layout_editor_absoluteX="19dp" />
</android.support.constraint.ConstraintLayout>
